FROM ubuntu/yakkety
DESCRIPTION Go 1.7.5

# Dependencies
RUN apt-get install -y \
    bash \
    ca-certificates \
    curl \
    sed \
    tar

# Configure
RUN mkdir -p /usr/share/go/src
RUN sed -i 's_PATH=\(.*\)_PATH=\1:/usr/local/go/bin_g' /etc/environment
RUN echo "GOPATH=/usr/share/go" >> /etc/environment

# Install
ENV VERSION 1.7.5
ENV URL     https://storage.googleapis.com/golang/go${VERSION}.linux-amd64.tar.gz
RUN curl -L "$URL" | tar -xzf - -C /usr/local
